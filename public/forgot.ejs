<div class="container">
  <div class="row">
    <div ng-controller="authCtrl" class="login-container">
      <div class="signup-form-container">
        <h3 class="page-title">Forgot Password</h3>
        <hr>
        <form ng-submit="resetPassword()" id="login-form" class="login-form">
          <input id="signup-email" type="email" placeholder="Email" class="u-full-width" ng-model="email" required>
          <input type="submit" value="Reset Password" id="signup-submit" class="button-primary">
        </form>
      </div>
    </div>
    <div class="hidden invalid">
      <p>Invalid email.</p>
    </div>
  </div>
</div>